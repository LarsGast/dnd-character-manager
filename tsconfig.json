{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "./build",
    "allowJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noEmitOnError": true
  },

  "include": ["./src/**/*"]
}