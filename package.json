{
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  
  "scripts": {
    "watch:ts": "tsc --watch",
    "serve:jekyll": "bundle exec jekyll serve",
    "dev": "npm-run-all --parallel watch:ts serve:jekyll",

    "build:ts": "tsc",
    "build:jekyll": "bundle exec jekyll build",
    "build": "npm-run-all build:ts build:jekyll"
  }
}
